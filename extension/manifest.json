{
    "manifest_version": 3,
    "name": "Tab Manager Extension",
    "version": "0.1",
    "icons": {},
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": ["tabs", "scripting"],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "externally_connectable": {
        "matches": ["http://localhost:3000/*", "https://tab-manager.ofeksror.com/*"]
    },
    "host_permissions": ["http://localhost:3000/*", "https://tab-manager.ofeksror.com/*"],
    "content_scripts": [
        {
            "matches": ["http://localhost:3000/*", "https://tab-manager.ofeksror.com/*"],
            "js": ["scripts/content-script.js"]
        }
    ]
}
